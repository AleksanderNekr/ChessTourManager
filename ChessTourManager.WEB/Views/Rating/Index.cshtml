@using ChessTourManager.DataAccess.Entities
@model IEnumerable<ChessTourManager.DataAccess.Entities.Player>

@{
    ViewData["Title"] = "Players";
    Tournament tournament = ViewBag.Tournament;
    string ratio1 = tournament.SystemId == 1
                        ? "Berger"
                        : "Buchholz";
    string ratio2 = tournament.SystemId == 1
                        ? "Simple Berger"
                        : "Total Buchholz";
}

<partial name="_TournamentPartial" model="tournament"/>
<h3>Rating</h3>
<hr/>
@if (Model.Count() == 0)
{
    <h4>No rating for this tournament</h4>
}
else
{
    <partial name="_ExportPartial"/>
    <table id="table" class="table table-hover">
        <thead>
        <tr>
            <th class="align-middle">
                Rank
            </th>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.PlayerFullName)
            </th>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.PlayerAttribute)
            </th>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.PlayerBirthYear)
            </th>
            @if (tournament.KindId != 1)
            {
                <th class="align-middle">
                    @Html.DisplayNameFor(model => model.Team)
                </th>
            }
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.WinsCount)
            </th>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.DrawsCount)
            </th>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.LossesCount)
            </th>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.PointsAmount)
            </th>
            <th class="align-middle">
                @Html.DisplayFor(model => ratio1)
            </th>
            <th class="align-middle">
                @Html.DisplayFor(model => ratio2)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (Player item in Model)
        {
            <tr>
                <td class="align-middle">
                    @(Model.ToList().IndexOf(item) + 1)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.PlayerFullName)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.PlayerAttribute)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.PlayerBirthYear)
                </td>
                @if (tournament.KindId != 1)
                {
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Team.TeamName)
                    </td>
                }
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Group.GroupName)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.WinsCount)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.DrawsCount)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.LossesCount)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.PointsAmount)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.RatioSum1)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.RatioSum2)
                </td>
            </tr>
        }
        </tbody>
    </table>
}


<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script>
    $(document).ready( function () {
        $('#table').DataTable({
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
            "order": [],
            // disable sorting for all columns
            "columnDefs": [
                { "orderable": false, "targets": "_all" }
            ],
        });
    } );
</script>
