@using ChessTourManager.DataAccess.Entities
@model ChessTourManager.DataAccess.Entities.Group

@{
    ViewData["Title"] = "Delete Group";
    Tournament tournament = ViewBag.Tournament;
}

<h1>Delete Group</h1>
<hr/>
<h3>Are you sure you want to delete this group?</h3>
<div>
    <h4>Group: @Model.GroupName</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GroupName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GroupName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Identity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Identity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tournament)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tournament.TournamentName)
        </dd>
    </dl>
    <hr/>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="OrganizerId" value="@tournament.OrganizerId"/>
        <input type="hidden" asp-for="TournamentId" value="@tournament.Id"/>
        <input type="submit" value="Delete" class="btn btn-danger m-2"/> |
        <a asp-action="Index" asp-route-id="@tournament.Id" class="btn btn-secondary">Back to List</a>
    </form>
</div>
