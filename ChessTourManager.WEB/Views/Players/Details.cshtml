@using ChessTourManager.DataAccess.Entities
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ChessTourManager.DataAccess.Entities.Player

@{
    ViewData["Title"] = "Player details";
    var tournament = (Tournament)ViewBag.Tournament;
}

<h1>Player Details: @Model.PlayerFullName</h1>
<hr/>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerLastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlayerLastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerFirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlayerFirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerAttribute)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlayerAttribute)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerBirthYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlayerBirthYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActiveLocalized)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PointsAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PointsAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WinsCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WinsCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LossesCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LossesCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DrawsCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DrawsCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RatioSum1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RatioSum1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RatioSum2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RatioSum2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BoardNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoardNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.GroupName)
        </dd>
        @if (tournament.KindId != 1)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Team)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Team.TeamName)
            </dd>
        }
    </dl>
</div>
<hr/>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" asp-route-id="@tournament.Id" class="btn btn-secondary">Back to List</a>
</div>
